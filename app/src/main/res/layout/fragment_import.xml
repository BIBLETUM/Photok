<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.importing.ImportFragment">

    <data>
        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.ui.importing.ImportViewModel" />
        <variable
            name="context"
            type="dev.leonlatsch.photok.ui.importing.ImportFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- START -->
        <LinearLayout
            android:id="@+id/importStartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:contentDescription="@string/import_importing_photos"
                android:src="@drawable/add_photos"
                android:layout_width="260dp"
                android:layout_height="260dp"/>

            <TextView
                android:text="@string/import_text_hint"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="@dimen/wide_button_width"
                android:layout_height="@dimen/wide_button_height"
                android:layout_marginTop="20dp"
                android:onClick="@{() -> context.importClicked()}"
                android:text="@string/import_importing_photos" />

        </LinearLayout>
        <!-- END START -->

        <!-- IMPORTING -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/importImportingAndFinishedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/importingAndFinishedImageContainer"
                android:layout_width="320dp"
                android:layout_height="320dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.364">

                <ImageView
                    android:id="@+id/importingImageView"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:src="@drawable/importing"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/importFinishedImageView"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:visibility="gone"
                    android:src="@drawable/import_finished"
                    android:layout_gravity="center"/>

            </FrameLayout>



            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/importingAndFinishedImageContainer"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/importImportingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_importing"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/importPercentageLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.importProgress.progressPercent.toString()}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/common_percent" />

                    </LinearLayout>

                </LinearLayout>

                <!-- FINISHED -->
                <TextView
                    android:id="@+id/importFinishedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{context.importFinishedText}"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <ProgressBar
                    style="@style/ProgressBarHorizontalStyle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="@{viewModel.importProgress.maxPercent}"
                    android:progress="@{viewModel.importProgress.progressPercent}" />

                <LinearLayout
                    android:id="@+id/importFailedLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/import_failed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@{viewModel.failed.toString()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.importProgress.current.toString()}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:text="@string/common_slash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.importProgress.max.toString()}" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="@string/import_abort"
                android:layout_width="@dimen/wide_button_width"
                android:layout_height="@dimen/wide_button_height"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.887"
                android:onClick="@{() -> viewModel.abortImport()}"/>

            <Button
                android:id="@+id/importBackToGalleryButton"
                android:layout_width="@dimen/extra_wide_button_width"
                android:layout_height="@dimen/wide_button_height"
                android:onClick="@{() -> context.backToGalleryClicked()}"
                android:text="@string/import_back_to_gallery"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.887" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- END IMPORTING -->

    </LinearLayout>

</layout>