<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.setup.SetupFragment">

    <data>

        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.ui.setup.SetupViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="62sp"
            android:fontFamily="@font/quicksand_regular"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TitleTextViewStyle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:paddingStart="20dp"
            android:text="@string/setup_create_your_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <EditText
                android:id="@+id/setupPasswordEditText"
                style="@style/passwordEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/password_edit_text_height"
                android:hint="@string/setup_enter_password"
                android:text="@={viewModel.passwordText}" />

            <EditText
                android:id="@+id/setupConfirmPasswordEditText"
                style="@style/passwordEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/password_edit_text_height"
                android:layout_marginTop="16dp"
                android:hint="@string/setup_confirm_password"
                android:text="@={viewModel.confirmPasswordText}"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/setupPasswordStrengthLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/setup_password_strength_label"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/setupPasswordStrengthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/setupPasswordMatchWarningTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/setup_password_match_warning"
                android:textColor="@color/darkRed"
                android:visibility="gone" />


        </LinearLayout>

        <Button
            android:id="@+id/setupButton"
            android:layout_width="@dimen/wide_button_width"
            android:layout_height="@dimen/wide_button_height"
            android:layout_gravity="center_horizontal"
            android:onClick="@{() -> viewModel.savePassword()}"
            android:text="@string/setup_button"
            android:enabled="false"/>

    </LinearLayout>

</layout>