<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="context"
            type="dev.leonlatsch.photok.ui.settings.ChangePasswordDialog" />

        <variable
            name="viewModel"
            type="dev.leonlatsch.photok.ui.settings.ChangePasswordViewModel" />
    </data>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_bottom_sheet_light"
        android:gravity="center_horizontal"
        android:minWidth="400dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            style="@style/BigTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Change your Password" />

        <LinearLayout
            android:id="@+id/changePasswordOldPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Old Password:" />

            <dev.leonlatsch.photok.ui.components.PasswordEditText
                android:id="@+id/changePasswordOldPasswordEditText"
                textValue="@={viewModel.oldPasswordTextValue}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/changePasswordCheckOldButton"
                android:layout_width="@dimen/wide_button_width"
                android:layout_height="@dimen/wide_button_height"
                android:layout_marginTop="@dimen/medium_gap"
                android:onClick="@{() -> viewModel.checkOld()}"
                android:text="Check" />

            <ImageView
                android:id="@+id/changePasswordOldStatusIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_check"
                android:visibility="gone"
                app:tint="@android:color/holo_green_dark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePasswordNewPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_gap"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="New Password:" />

            <dev.leonlatsch.photok.ui.components.PasswordEditText
                android:id="@+id/changePasswordNewPasswordEditText"
                textValue="@={viewModel.newPasswordTextValue}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:password_edit_text_hint="@string/setup_enter_password" /> <!-- TODO: replace text  -->

            <dev.leonlatsch.photok.ui.components.PasswordEditText
                android:id="@+id/changePasswordNewPasswordConfirmEditText"
                textValue="@={viewModel.newPasswordConfirmTextValue}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_gap"
                app:password_edit_text_hint="@string/setup_confirm_password" /> <!-- TODO: replace text  -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/small_gap"
                android:text="@string/setup_password_match_warning"
                android:textColor="@color/darkRed"
                android:textSize="14sp"
                android:visibility="visible" />

            <Button
                android:layout_width="@dimen/wide_button_width"
                android:layout_height="@dimen/wide_button_height"
                android:layout_marginTop="@dimen/medium_gap"
                android:onClick="@{() -> viewModel.checkNew()}"
                android:text="Change Password" />
        </LinearLayout>

        <include layout="@layout/loading_overlay" />
    </LinearLayout>
</layout>
