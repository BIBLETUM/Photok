<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_nav_graph"
    app:startDestination="@id/lockedFragment">

    <fragment
        android:id="@+id/setupFragment"
        android:name="dev.leonlatsch.photok.ui.setup.SetupFragment"
        android:label="fragment_setup"
        tools:layout="@layout/fragment_setup" >
        <action
            android:id="@+id/action_setupFragment_to_tutorialFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/lockedFragment"
        android:name="dev.leonlatsch.photok.ui.locked.LockedFragment"
        android:label="fragment_locked"
        tools:layout="@layout/fragment_locked" >
        <action
            android:id="@+id/action_lockedFragment_to_setupFragment"
            app:destination="@id/setupFragment" />
        <action
            android:id="@+id/action_lockedFragment_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="dev.leonlatsch.photok.ui.onboarding.OnBoardingFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_introFragment_to_setupFragment"
            app:destination="@id/setupFragment" />
    </fragment>
</navigation>