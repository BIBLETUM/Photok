<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="dev.leonlatsch.photok.ui.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom"
            app:popUpTo="@id/galleryFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_galleryFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom"
            app:popUpTo="@id/galleryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="dev.leonlatsch.photok.ui.settings.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:popUpTo="@id/settingsFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="dev.leonlatsch.photok.ui.about.AboutFragment"
        android:label="AboutFragment">
        <action
            android:id="@+id/action_aboutFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:popUpTo="@id/aboutFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
</navigation>