<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="dev.leonlatsch.photok.ui.gallery.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_galleryFragment_to_importFragment"
            app:destination="@id/importFragment"
            app:exitAnim="@anim/slide_to_bottom"
            app:enterAnim="@anim/slide_to_top" />
        <action
            android:id="@+id/action_galleryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
        <action
            android:id="@+id/action_galleryFragment_to_infoFragment"
            app:destination="@id/infoFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="dev.leonlatsch.photok.ui.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
    <fragment
        android:id="@+id/importFragment"
        android:name="dev.leonlatsch.photok.ui.importing.ImportFragment"
        android:label="fragment_import"
        tools:layout="@layout/fragment_import" >
        <action
            android:id="@+id/action_importFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="dev.leonlatsch.photok.ui.InfoFragment"
        android:label="InfoFragment" >
        <action
            android:id="@+id/action_infoFragment_to_galleryFragment"
            app:destination="@id/galleryFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>
</navigation>