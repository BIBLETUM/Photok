<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ThinButtonStyle</item>
        <item name="progressBarStyle">@style/ProgressBarHorizontalStyle</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- BUTTON -->
    <style name="ThickButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@drawable/round_button</item>
    </style>

    <style name="ThinButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="ProgressBarHorizontalStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/thick_progress_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>